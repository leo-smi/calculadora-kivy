<MyBoxLayout>:
	id: calculadora
	orientation: 'vertical'
	Label:
		id: history
		halign: 'right'
		valign: 'middle'
		text_size: self.size # tem que ter isso pro halign funcionar	
		text: ''
		font_size: '30sp'
		padding_x: 30	
	Label:
		id: output_screen
		halign: 'right'
		valign: 'middle'
		text_size: self.size # tem que ter isso pro halign funcionar	
		text: ''
		font_size: '40sp'
		padding_x: 30
	BoxLayout:
		Button:
			text: '%'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)
		Button:
			text: '^'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)
		BoxLayout:
			Button:
				text: '('
				font_size: calculadora.font_size()
				on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)
			Button:
				text: ')'
				font_size: calculadora.font_size()
				on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)				
		Button:
			text: 'C'
			font_size: calculadora.font_size()
			on_press: output_screen.text = ''			
	BoxLayout:
		Button:
			text: '9'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)
		Button:
			text: '8'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)		
		Button:
			text: '7'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)
		Button:
			text: '+'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)			
	BoxLayout:		
		Button:
			text: '4'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)		
		Button:
			text: '5'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)		
		Button:
			text: '6'
			font_size: calculadora.font_size()	
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)		
		Button:
			text: '-'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)				
	BoxLayout:	
		Button:
			text: '1'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)			
		Button:
			text: '2'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)		
		Button:
			text: '3'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)			
		Button:
			text: 'x'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen('*', output_screen.text)		
	BoxLayout:	
		Button:
			text: '0'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)	
		Button:
			text: '.'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)				
		Button:
			text: '='
			font_size: calculadora.font_size()
			on_press: output_screen.text, history.text = calculadora.calculate(output_screen.text), output_screen.text # calculadora == id do MyBoxLayout		
		Button:
			text: '/'
			font_size: calculadora.font_size()
			on_press: output_screen.text = calculadora.vrfy_screen(self.text, output_screen.text)	
